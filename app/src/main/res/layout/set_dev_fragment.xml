<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/vertical_line"
            android:layout_width="wrap_content"
            android:layout_height="25dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="@string/set_dev_info"/>
    </LinearLayout>
    <com.clever.www.clevermobile.devShow.set.SetDevName
        android:id="@+id/devName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.clever.www.clevermobile.devShow.set.SetDevUsr
        android:id="@+id/usr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/vertical_line"
            android:layout_width="wrap_content"
            android:layout_height="25dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="@string/set_dev_maintain"/>
    </LinearLayout>
    <com.clever.www.clevermobile.devShow.set.SetDevCmd
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>