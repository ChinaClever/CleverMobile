<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--<com.clever.www.clevermobile.devShow.line.LineCstDisplay-->
        <!--android:id="@+id/dis"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content">-->
    <!--</com.clever.www.clevermobile.devShow.line.LineCstDisplay>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/vertical_line"
            android:layout_width="wrap_content"
            android:layout_height="25dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="@string/line_dev_text"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentBottom="true"
        android:background="@color/title_div_white"/>

    <fragment
        android:id="@+id/line"
        android:name="com.clever.www.clevermobile.devShow.lineList.LineListFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/vertical_line"
            android:layout_width="wrap_content"
            android:layout_height="25dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="@string/loop_dev_text"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentBottom="true"
        android:background="@color/title_div_white"/>

    <fragment
        android:id="@+id/loop"
        android:name="com.clever.www.clevermobile.devShow.loop.LoopFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>